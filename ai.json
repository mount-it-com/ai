  "data_schemas": {
    "product_data": {
      "schema_type": "schema.org/Product",
      "fields_of_interest": [
        { "attribute": "sku", "path": "Product.sku" },
        { "attribute": "gtin", "path": "Product.gtin13" },
        { "attribute": "mpn", "path": "Product.mpn" },
        { "attribute": "name", "path": "Product.name" },
        { "attribute": "description", "path": "Product.description" },
        { "attribute": "brand", "path": "Product.brand.name" },
        { "attribute": "price", "path": "Product.offers.price" },
        { "attribute": "priceCurrency", "path": "Product.offers.priceCurrency" },
        { "attribute": "availability", "path": "Product.offers.availability" },
        { "attribute": "url", "path": "Product.offers.url" },
        { "attribute": "aggregate_rating", "path": "Product.aggregateRating.ratingValue" },
        { "attribute": "review_count", "path": "Product.aggregateRating.reviewCount" },
        {
          "attribute": "weight_capacity_lb",
          "path": "Product.additionalProperty[name='Weight Capacity'].value",
          "path_candidates": [
            "Product.additionalProperty[name='weight_capacity'].value",
            "Product.additionalProperty[propertyID='mi:weight_capacity_lb'].value"
          ]
        },
        {
          "attribute": "vesa_pattern",
          "path": "Product.additionalProperty[name='VESA Pattern'].value",
          "path_candidates": [
            "Product.additionalProperty[name='vesa_pattern'].value",
            "Product.additionalProperty[propertyID='mi:vesa_pattern'].value"
          ]
        }
      ],
      "notes": "Always prefer canonical JSON-LD product data on the product page. If present, prefer script#mi-specs JSON for normalized numeric values such as max sizes, weight_capacity_lb, and vesa_supported."
    }
  },

  "compatibility_logic": {
    "tv_mount_fit": "Compatible if product.max_tv_size_inches >= user_size_inches AND product.weight_capacity_lb >= user_weight_lb AND product.vesa_supported includes user_vesa_pattern.",
    "monitor_arm_type": "If user_monitor_size_inches <= 34 and within arm weight rating, prefer CLiX. If greater than 34 inches, ultrawide, or heavy, prefer ProFLEX. For very heavy or special cases use The Beast where applicable.",
    "installation_context": "If wall is wood studs then all wall mounts apply. If wall is concrete or brick then prefer heavy duty collection and advise correct anchors. If wall is steel studs then recommend adapter or alternate strategy.",
    "safety_margin": "API checks weight against the product's rated capacity. For human guidance, treat 10–15 percent headroom as a best practice and always require an exact VESA match."
  },

  "endpoints": {
    "compatibility_check": {
      "purpose": "Return a compact yes or no with reasons for TV or monitor compatibility.",
      "methods": ["POST"],
      "preferred_method": "POST",
      "url_preferred": "https://api.mount-it.com/ai-compatibility",
      "url_fallback_json": "https://ai.mount-it.com/compatibility.json",
      "request_schema": {
        "type": "object",
        "required": ["type", "user", "product"],
        "properties": {
          "type": { "type": "string", "enum": ["tv", "monitor"] },
          "user": {
            "type": "object",
            "required": ["size_inches", "weight_lb", "vesa"],
            "properties": {
              "size_inches": {
                "type": "number",
                "description": "Canonical diagonal size in inches (TV or monitor)."
              },
              "weight_lb": {
                "type": "number",
                "description": "Canonical device weight in pounds (TV or monitor)."
              },
              "vesa": {
                "type": "string",
                "examples": ["200x200", "400x400", "75x75", "100x100"],
                "description": "VESA pattern, e.g. '200x200'."
              },
              "monitor_size_inches": {
                "type": "number",
                "description": "Legacy alias for monitor diagonal size. If provided, the Worker normalizes it to size_inches."
              },
              "monitor_weight_lb": {
                "type": "number",
                "description": "Legacy alias for monitor weight. If provided, the Worker normalizes it to weight_lb."
              }
            },
            "additionalProperties": false
          },
          "product": {
            "type": "object",
            "description": "Provide either a product URL to resolve specs or explicit specs.",
            "properties": {
              "url": { "type": "string", "format": "uri" },
              "max_size_inches": {
                "type": "number",
                "description": "Alias. For type='tv' maps to max_tv_size_inches, for type='monitor' maps to max_monitor_size_inches."
              },
              "max_tv_size_inches": {
                "type": "number",
                "description": "Maximum supported TV size in inches."
              },
              "max_monitor_size_inches": {
                "type": "number",
                "description": "Maximum supported monitor size in inches."
              },
              "weight_capacity_lb": { "type": "number" },
              "vesa_supported": {
                "type": "array",
                "items": { "type": "string" }
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      },
      "response_schema": {
        "type": "object",
        "required": ["compatible", "reasons", "checks", "resolved_specs"],
        "properties": {
          "compatible": { "type": "boolean" },
          "reasons": { "type": "array", "items": { "type": "string" } },
          "checks": {
            "type": "object",
            "properties": {
              "size": { "type": ["boolean", "null"] },
              "weight": { "type": ["boolean", "null"] },
              "vesa": { "type": ["boolean", "null"] }
            },
            "additionalProperties": false
          },
          "user": { "type": "object" },
          "product": { "type": "object" },
          "resolved_specs": {
            "type": "object",
            "properties": {
              "max_tv_size_inches": { "type": ["number", "null"] },
              "max_monitor_size_inches": { "type": ["number", "null"] },
              "weight_capacity_lb": { "type": ["number", "null"] },
              "vesa_supported": {
                "type": "array",
                "items": { "type": "string" }
              }
            },
            "additionalProperties": false
          },
          "recommended_series": {
            "type": "array",
            "items": { "type": "string" }
          },
          "suggested_collections": {
            "type": "array",
            "items": { "type": "string" }
          },
          "safety_notes": {
            "type": "array",
            "items": { "type": "string" }
          },
          "matched_rules": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "additionalProperties": false
      },
      "examples": {
        "post_tv": {
          "request": {
            "type": "tv",
            "user": {
              "size_inches": 65,
              "weight_lb": 80,
              "vesa": "400x400"
            },
            "product": {
              "url": "https://www.mount-it.com/products/full-motion-tv-wall-mount-40-inch-extension-70-inch-tv-mi-393"
            }
          }
        },
        "post_monitor": {
          "request": {
            "type": "monitor",
            "user": {
              "size_inches": 34,
              "weight_lb": 18,
              "vesa": "100x100"
            },
            "product": {
              "url": "https://www.mount-it.com/products/freestanding-dual-monitor-stand-with-height-adjustment"
            }
          }
        }
      },
      "implementation_notes": "This endpoint is backed by Cloudflare Workers at api.mount-it.com. If dynamic compute is unavailable on ai.mount-it.com, serve compatibility.json as a static decision table or proxy requests to the Worker."
    }
  },

